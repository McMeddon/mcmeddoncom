---
export interface Props {
	h1: string;
	p: string;
    p2: string;
	body: string;
}

const { h1, p, p2, body} = Astro.props;
---

<div class="herotitlewrapper">
    <h1><span class="text-gradient">{h1}</span></h1>
    <hr>
    <p>{p}<br>{p2} {body}</p>
</div>


<style>

hr{
    margin: 1em;
}

.herotitlewrapper {
	padding:8em;
	text-align: center;
	margin:auto;
    width: 60%;
}

.herotitlewrapper h1 {
	margin: auto;
}
.herotitlewrapper p {
	font-size: x-large;
	font-weight: 100;
	margin: auto;
}

@media (max-width: 1400px) {
	.herotitlewrapper {padding:2em; width: 70%;}
    .herotitlewrapper h1 {font-size: 2.5em;}
}

@media (max-width: 1100px) {
	.herotitlewrapper {padding:2em; width: 90%;}
    .herotitlewrapper h1 {font-size: 2.5em;}
}
@media (max-width: 700px) {
    .herotitlewrapper {padding:.5em;}
	.herotitlewrapper h1 {font-size: 1.5em;}
	.herotitlewrapper p {font-size: inherit}
}

</style>