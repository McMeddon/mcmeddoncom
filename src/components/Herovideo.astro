---
export interface Props {
	src: string;
}

const {src} = Astro.props;
---
<div class="videowrapper">
	<video class="videohero"autoplay muted loop>
   <source src={src} type="video/mp4">
   Your browser does not support the video tag.
</video>
</div>

<style>

.videohero{
    width: 100%;
    height: calc((80vh + 80vw)/3.4);
    object-fit: fill;
    opacity: 0.5;
    z-index: -2;
    object-fit: cover;       
    position: absolute;
    justify-self: center;
    align-self: center;
    top: 0;
    left: 0px;
    box-shadow: 0 0 30px 11px black;
    filter:blur(1px)
}
</style>