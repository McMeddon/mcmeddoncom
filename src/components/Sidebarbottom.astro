/*-----------------------*/
.menuwrapper{
    position: fixed;
    bottom:0 ;
    width: 100%;
    z-index: 999;
}
.menubar{    
    
    max-width:fit-content;
    margin: auto;
    margin-bottom: 30px;
    margin-top: 20px;
    justify-content: center;
    align-items: center;
    
    
    
    /* background-color: #2d2f31; */
    /* background: rgba(0, 0, 0, 0.2); */
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(7.9px);
    -webkit-backdrop-filter: blur(7.9px);
    border: 1px solid #222;
    
    border-radius: 18px;
    padding:10px;
    

    /* border: 1px solid red; */
    
    
}


.menubar-img{
    width: auto;
    height: auto;}
/* removing random padding fix */
.menubar ul {
    min-width: fit-content;
    display: flex;
        margin:0;
        padding:0;
    
        text-decoration: none;
}

.menubar ul > li {
    min-width: 60px;
    margin:0;
    list-style-type: none;
    /* border: 1px solid blue; */
    
    width: fit-content;

    padding:5px;
    margin:2px;

    border-radius: 12px;
    border: 2px solid #444;
    background: rgba(10, 10, 10, 0.7);
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    text-decoration: none;
     
     
}
.menubar ul > li > a {
    min-width: fit-content;

    
    grid-template-columns: auto;
    grid-template-rows: 1fr;
    color:#999;
    text-decoration: none;
    text-decoration:  none;   
    
    display: inline-flex;
    flex-direction: column;
    justify-content: center;
    width: 100%;
     align-items: center;
     height: 100%;
     font-size: 10px;
    
     /* border: 1px solid green; */
     

     
}
.menubar ul > li:not(:first-child) {
    /* filter: invert(.9); */
}

.menubar-img {
    height:25px;
    width:25px;
}

/* //add a transition to the hover  */
.menubar ul > li:hover:not(:first-child) {
    filter: invert(46%) sepia(88%) saturate(782%) hue-rotate(16deg) brightness(90%) contrast(101%);
    transition: 0.2s;
}

/*-----------------------*/
@media (max-width: 768px) {
    .menubar {
        position: fixed;
        bottom: 0;
        top: auto;
        left: 0;
        right: 0;
        
        height: auto;
        width: 100%;
        display: flex;
        justify-content: space-around;
        background: rgba(51, 51, 51, 0.8); /* Slightly more opaque for better visibility */
        border-top: 1px solid #222;
        padding: 0.5em 0; /* Reduce padding for a more compact layout */
    }

    .menubar ul {
        display: flex;
        flex-direction: row;
        width: 100%;
        padding: 0;
        margin: 0;
        justify-content: space-around; /* Spread out the items evenly */
    }

    .menubar ul > li {
        margin: 0;
        list-style-type: none;
        width: auto; /* Adjust width to fit horizontal layout */
        padding: 0.5em; /* Increase padding for touch targets */
    }

    .menubar ul > li > a {
        font-size: 12px;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        color: black; /* Change text color for better contrast on darker background */
    }

    .menubar-img {
        height: 30px; /* Reduce icon size for better fit on mobile */
        width: 30px;
    }

    /* Hover effects */
    .menubar ul > li:hover:not(:first-child) {
        filter: none; /* Reset filter on hover for mobile */
        transition: 0.2s;
    }
}
/*-----------------------*/



