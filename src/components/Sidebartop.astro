    z-index: 999;

}
.menubar{    
    /* TDO: //URL causing error */
    /* background-image: url(""); */
    background-position: center;
    background-repeat: repeat;
    background-size: cover;
    width: 90%;
    max-width:1440px;
    margin: auto;
    margin-bottom: 30px;
    margin-top: 20px;
    justify-content: center;
    align-items: center;
    
    
    
    /* background-color: #2d2f31; */
    /* background: rgba(0, 0, 0, 0.2); */
    box-shadow: 0 10px 10px rgba(0, 0, 0, .5);
    backdrop-filter: blur(17.9px);
    -webkit-backdrop-filter: blur(17.9px);
    border: 1px solid #222;
    
    border-radius: 18px;
    padding:5px;
    

    /* border: 1px solid red; */

}


.menubar-img{
    width: 30px;
    height: 30px;}
/* removing random padding fix */
.menubar ul {
    min-width: fit-content;
    display: flex;
    margin:0;    
    margin-right: auto;
    height:auto;
    text-decoration: none;

    
}

.menubar ul > li {
    min-width: 30px;
    margin:0;
    list-style-type: none;
    /* border: 1px solid blue; */
    width: fit-content;
    justify-content: space-evenly;
    padding:2px;

    margin:2px;
    margin-right: 1%;

   /*  border-radius: 12px;
    border: 2px solid #444;
    background: rgba(10, 10, 10, 0.7);
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2); */
    text-decoration: none;
     
     
}
.menubar ul > li > a {
    min-width: fit-content;
    grid-template-columns: auto;
    grid-template-rows: 1fr;
    color:black;
    text-decoration: none;
    text-align: center;
    display: flex;
    flex-direction: row;
    justify-content: center;
    width: 100%;
     align-items: center;
     height: 100%;
     font-size: 15px;
    
     /* border: 1px solid green; */
     

     
}
.menubar ul > li:not(:first-child) {
    filter: invert(.9);
}

.menubar ul > li:last-child {
    filter: invert(0);
    margin-left: auto;
    
    
}

.menubar-img {
    height:35px;
    width:35px;
    border-radius: 5px;


/* //add a transition to the hover  */
.menubar ul > li:hover:not(:first-child) {
    filter: invert(46%) sepia(88%) saturate(782%) hue-rotate(16deg) brightness(90%) contrast(101%);
    transition: 0.2s;
}

.menubar ul > li:hover:last-child {
    filter: invert(0%) sepia(0%) saturate(100%) hue-rotate(0deg) brightness(100%) contrast(101%);
    transition: 0.02s;
}


/*-----------------------*/
@media (max-width: 768px) {
    .menubar {
        position: fixed;
        bottom: 0;
        top: auto;
        left: 0;
        right: 0;
        
        height: auto;
        width: 100%;
        display: flex;
        justify-content: space-around;
        background: rgba(51, 51, 51, 0.8); /* Slightly more opaque for better visibility */
        border-top: 1px solid #222;
        padding: 0.5em 0; /* Reduce padding for a more compact layout */
    }

    .menubar ul {
        display: flex;
        flex-direction: row;
        width: 100%;
        padding: 0;
        margin: 0;
        justify-content: space-around; /* Spread out the items evenly */
    }

    .menubar ul > li {
        margin: 0;
        list-style-type: none;
        width: auto; /* Adjust width to fit horizontal layout */
        padding: 0.5em; /* Increase padding for touch targets */
    }

    .menubar ul > li > a {
        font-size: 12px;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        color: black; /* Change text color for better contrast on darker background */
    }

    .menubar-img {
        height: 30px; /* Reduce icon size for better fit on mobile */
        width: 30px;
    }

    /* Hover effects */
    .menubar ul > li:hover:not(:first-child) {
        filter: none; /* Reset filter on hover for mobile */
        transition: 0.2s;
    }
}
