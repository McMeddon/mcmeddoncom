---
import Layout from '../layouts/Layout.astro';
import Herobanner from '../components/Herobanner.astro';
/* import Card from '../components/Card.astro'; */
import Herotext from '../components/Herotext.astro';
/* import BBcode from '../components/bbcode.astro';
import Instruction from '../components/Instruction.astro';
import McPing from '../components/McPing.astro';
import BGani from '../components/BG-animation.astro';
import BGani2 from '../components/BG-animation2.astro'; */

export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<Layout title="Index">	
	<main>		
		<!----------------------------------->
		<Herotext
		h1="Advanced Survival Friendly Vanilla Minecraft Landscapes"
		p="Creating with passion, survival worlds for solo, coop and multiplayer server adventures for you to explore and enjoy">
		<br>
		<a href="/world-dynmaps/"><button class="btn btn-primary">Explore on Dynmap</button></a>
        <a href="https://www.patreon.com/mcmeddon" target="_blank"><button class="btn btn-secondary">Become a Patreon</button></a>
		</Herotext>

		<Herobanner class="hover"
		 href="https://www.planetminecraft.com/project/jesankor/"
		 h2="Jesankor, 7k- Waterfalls, Terraces and Cliffs "
		 img="/images/jesankor/q.png"
		 p="Adventure, explore, survive or create, at the most beautiful places in Minecraft and explore all the unique places and structures around the world."
		 />

		<Herobanner class="hover"
		 href="https://www.planetminecraft.com/project/wullestor/"
		 h2="Wullestor - 4k, The Island of Archipels "
		 img="/images/wullestor/L.png"
		 p="Adventure, explore, survive or create, at the most beautiful places in Minecraft and explore all the unique places and structures around the world."
		 />

		<Herobanner class="hover"
		 href="https://www.planetminecraft.com/project/Gelazkor/"
		 h2="Gelazkor - 5k, Plateaus and Lands of the Flowers "
		 img="/images/gelazkor/gelazkor1b.png"
		 p="Adventure, explore, survive or create, at the most beautiful places in Minecraft and explore all the unique places and structures around the world."
		 />
	
		<Herobanner class="hover"
		 href="https://www.planetminecraft.com/project/Zarbokos/"
		 h2="Zarbokos- 4k, Alpine Island "
		 img="/images/zarbokos/D.png"
		 p="Adventure, explore, survive or create, at the most beautiful places in Minecraft and explore all the unique places and structures around the world."
		 />
	</main>
</Layout>

<style>

/* ---------------------------------------------- */



	.wrapper{ 
	max-width: 100% !important;
	height:auto;
	display: grid;
	grid-template-columns: auto;
	font-size: large;
	font-weight: 400;
	color: #ededed;
	}
	.wrapper img, #demo img {
		border-radius: 25px; 
		border: 1px solid white;
		margin-bottom: .5em; 
		height:auto;
		max-width:100%;
		}

	.contentwrapper{
		display: grid;
		grid-template-columns: 1fr;
		grid-column-gap: 2%;
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0;
	}

	
/* ---------------------------------------------- */	

@media (min-width: 600px) {
	h1{
		margin-top: 1em;
		margin-bottom: 1em;
	}
}



/* ---------------------------------------------- */
</style>
