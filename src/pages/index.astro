---
import Layout from '../layouts/Layout.astro';
import Herobanner from '../components/Herobanner.astro';
/* import Card from '../components/Card.astro'; */
/* import BBcode from '../components/bbcode.astro';
import Instruction from '../components/Instruction.astro';
import McPing from '../components/McPing.astro';
import BGani from '../components/BG-animation.astro';
import BGani2 from '../components/BG-animation2.astro'; */


export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<Layout title="Index">	
	<main>		
		
		<!----------------------------------->
		<h1><span class="text-gradient">McMeddons Survival Friendly Worlds to Explore, Play, and Enjoy </span></h1>
		
		<p></p>

		<Herobanner class="hover"
		 h1="Favaxima, 4k Lands of Cliffs and Plateaus "
		 img="https://static.planetminecraft.com/files/image/minecraft/project/2023/486/16655045-hh_xl.webp"
		 p="Adventure, explore, survive or create, at the most beautiful places in Minecraft and explore all the unique places and structures around the world."
		 />
	
		<Herobanner class="hover"
		 h1="Vekanpid - 8K, Coves and Alpines "
		 img="https://static.planetminecraft.com/files/image/minecraft/project/2022/167/16229363-c_xl.webp"
		 p="Adventure, explore, survive or create, at the most beautiful places in Minecraft and explore all the unique places and structures around the world."
		 />
		
		
	</main>
</Layout>

<style>

/* ---------------------------------------------- */

	main {		
		padding: 1.5rem;
	}

	.wrapper{ 
	max-width: 100% !important;
	height:auto;
	display: grid;
	grid-template-columns: auto;
	font-size: large;
	font-weight: 400;
	color: #ededed;
	}
	.wrapper img, #demo img {
		border-radius: 25px; 
		border: 1px solid white;
		margin-bottom: .5em; 
		height:auto;
		max-width:100%;
		}

	.contentwrapper{
		display: grid;
		grid-template-columns: 1fr;
		grid-column-gap: 2%;
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0;
	}
@media (min-width: 600px) {
	h1{
		margin-top: 1em;
		margin-bottom: 1em;
	}
}
	
/* ---------------------------------------------- */	



</style>
