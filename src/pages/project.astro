---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Herobanner from '../components/herobanner.astro';
import BBcode from '../components/bbcode.astro';
import Instruction from '../components/Instruction.astro';

/* export interface Props {
    title: string;
} */

//const { title } = Astro.props;
//const title = {title}
const num = 1;
---



<Layout>
	
	<main>		
		<Herobanner 
		 h1="Favaxima, 4k Lands of Cliffs and Plateaus "
		 img="https://static.planetminecraft.com/files/image/minecraft/project/2022/167/16229389_xl.webp"
		 p="Adventure, explore, survive or create, at the most beautiful places in Minecraft and explore all the unique places and structures around the world."
		 />

		
		<contentwrapper class="contentwrapper">
			<left>
				<!----------------------------------->

				<h1>{num}</h1>
				<h1>Welcome to <span class="text-gradient">McMeddons Worlds</span></h1>
				
				<p></p>
				<ul role="list" class="link-card-grid">
					<Card
					href="https://docs.astro.build/"
					title="Download Map"
					body="Learn how Astro works and explore the official API docs."
					/>
					<Card
					href="https://astro.build/integrations/"
					title="Download Source Files"
					body="Supercharge your project with new frameworks and libraries."
					/>
					<Card
					href="https://astro.build/themes/"
					title="Dynmap"
					body="Explore a galaxy of community-built starter themes."
					/>
					<Card
					href="https://astro.build/chat/"
					title="Discover the Discord"
					body="Come say hi to our amazing Discord community. ❤️"
					/>
				</ul>
				<Instruction 
				h2="Explore the world"
				p="Explore the world and discover the most beautiful places in Minecraft. "
				p3="Adventure, explore, survive or create, at the most beautiful places in Minecraft and explore all the unique places and structures around the world."
				/>
				<!----------------------------------->
				<wrapper class="wrapper" style="max-width: 500px;">
					
					<BBcode />
					<!--- </BBcode><div id="bbcode" class="bbcode"></div> -->
				</wrapper>
				<!----------------------------------->
					
						
						
			</left>
			
			<right>
				<wrapper class=wrapper>
					<p>images</p>
					
					<img src="https://static.planetminecraft.com/files/image/minecraft/project/2022/167/16229362-b_l.webp">
					<img src="https://static.planetminecraft.com/files/image/minecraft/project/2022/167/16229362-b_l.webp">
					<img src="https://static.planetminecraft.com/files/image/minecraft/project/2022/167/16229362-b_l.webp">
					<img src="https://static.planetminecraft.com/files/image/minecraft/project/2022/167/16229362-b_l.webp">
					</wrapper>
			</right>
		</contentwrapper>
		
	</main>
</Layout>

<style>
	main {		
		padding: 1.5rem;
	}
	.wrapper{ 
	max-width: 100% !important;
	height:auto;
	display: grid;
	grid-template-columns: auto;
	font-size: large;
	font-weight: 400;
	color: #ededed;
}
.wrapper img, #demo img {
	border-radius: 25px; 
	border: 1px solid white;
	margin-bottom: .5em; 
	height:auto;
	max-width:100%;
	}

.demo, img{ 
	max-width: 100% !important;
	overflow: hidden;
	width: fit-content;
	
}

h1 {
	color:#efefef;
	font-size: 5rem;
	font-weight: 900;
	margin: 0;
}
.contentwrapper{
	display: grid;
	grid-template-columns: 1fr 1fr;
	grid-column-gap: 2%;
}

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0;
	}
</style>
