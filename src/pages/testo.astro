<style>
    .fullbannercontainer{   
        position: relative;     
        top: 0;
        right: 0;
        height: max-content;    
         

    }

    .scrollchild{ 
        scroll-snap-align: start;
        scroll-snap-stop: normal;
    }

    .scrollchild{
        position:relative;
        height: 100vh; 
    }
    @media screen and (max-width: 600px) {
        .fullbannercontainer{
            height: 100vh; 
            height: max-content;   
            
