            padding-left:-1px;
            margin:0;
            
    }
    
    .overlay{
        display:block;
    }
    .overlay:after {
    content: ' ';
    position: absolute;
    left: 0;
    top: 0;
    height: 100vh;
    width:100%;
    padding:0;
    margin:0;
    
    display: inline-block;
    background: linear-gradient(0deg, rgba(29, 29, 39, 0.9) 10%, rgba(255,255,255,0) 50%, rgba(246,246,246,0) 90%, rgba(0,0,0,0) 100%);
